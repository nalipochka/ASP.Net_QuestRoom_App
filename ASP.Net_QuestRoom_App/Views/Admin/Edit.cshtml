@*@model ASP.Net_QuestRoom_App.Data.Entities.QuestRoom*@
@model EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>QuestRoom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestRoom.Id" />
            <input type="hidden" asp-for="QuestRoom.Logo" />
            <div class="form-group">
                <label asp-for="QuestRoom.Name" class="control-label"></label>
                <input asp-for="QuestRoom.Name" class="form-control" />
                <span asp-validation-for="QuestRoom.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.About" class="control-label"></label>
                <input asp-for="QuestRoom.About" class="form-control" />
                <span asp-validation-for="QuestRoom.About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.TravelTime" class="control-label"></label>
                <input asp-for="QuestRoom.TravelTime" class="form-control" />
                <span asp-validation-for="QuestRoom.TravelTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.MinPlayers" class="control-label"></label>
                <input asp-for="QuestRoom.MinPlayers" class="form-control" />
                <span asp-validation-for="QuestRoom.MinPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.MaxPlayers" class="control-label"></label>
                <input asp-for="QuestRoom.MaxPlayers" class="form-control" />
                <span asp-validation-for="QuestRoom.MaxPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.MinAgePlayers" class="control-label"></label>
                <input asp-for="QuestRoom.MinAgePlayers" class="form-control" />
                <span asp-validation-for="QuestRoom.MinAgePlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.Address" class="control-label"></label>
                <input asp-for="QuestRoom.Address" class="form-control" />
                <span asp-validation-for="QuestRoom.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.PnonesDb" class="control-label"></label>
                <input asp-for="QuestRoom.PnonesDb" class="form-control" />
                <span asp-validation-for="QuestRoom.PnonesDb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.Email" class="control-label"></label>
                <input asp-for="QuestRoom.Email" class="form-control" />
                <span asp-validation-for="QuestRoom.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.Company" class="control-label"></label>
                <input asp-for="QuestRoom.Company" class="form-control" />
                <span asp-validation-for="QuestRoom.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.Rating" class="control-label"></label>
                <input asp-for="QuestRoom.Rating" class="form-control" />
                <span asp-validation-for="QuestRoom.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.LevelOfFear" class="control-label"></label>
                <input asp-for="QuestRoom.LevelOfFear" class="form-control" />
                <span asp-validation-for="QuestRoom.LevelOfFear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestRoom.DefficultyLevel" class="control-label"></label>
                <input asp-for="QuestRoom.DefficultyLevel" class="form-control" />
                <span asp-validation-for="QuestRoom.DefficultyLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="mb-3">
                    <p>Current logotype:</p>
                    <img src="data:image/*;base64,@(Convert.ToBase64String(Model.QuestRoom.Logo!))"
                    class="card-img-bottom w-100" alt="@Model.QuestRoom.Name"/>
                </div>
                <label asp-for="Logotype" class="control-label"></label>
                <input asp-for="Logotype" type="file" accept="image/*" class="form-control" />
                <span asp-validation-for="Logotype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Panel">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
